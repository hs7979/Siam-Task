<%- include("partials/header") %>
<div style="position: relative;top:50px;" >
    <div class="container" >
        <div class="col-md-6" >
            <div class="thumbnail">
                <img class="image-responsive" src="<%=showt.image%> " width="100%" height="500px">
            </div>
            <div class="well">
                <h4>Description:</h4>
                <pre><p>
                    <%=showt.content%>
                </p></pre>
            </div>
            <hr>
        </div>
        <div class="col-md-6">
            <div class="caption-full">
                <h4><%=showt.title %></h4>
                <h4 >Author:<%=showt.author.username%></h4>
                <h4>Designation:<%=showt.post%></h4>
                <h6>Created:<%=showt.created.toDateString()%></h6>
            </div>
            <hr>
            <p> Acknowledge When Completed Task!</p>
            <form action="/completed/<%=showt._id%>" method="POST">
                <button type="submit">Completed!</button>
            </form>
            <br>
            <p>List of Completed:</>
            <ul>
                <%showt.compT.forEach(function(name){%>
                    <li><%=name.username%></li>
                <%})%>
            </ul>
            <a href="/edit/list/<%=showt._id%>">Edit List</a>
        </div>
        
    </div>
    
    <br>
    <br>
    <br>
</div>
<%- include("partials/footer") %>