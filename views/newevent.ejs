<%- include("partials/header") %>
<div style="position: relative;top:50px;">
    <h1 style="text-align:center; color: azure;">Enter A New Task</h1>
    <div class="container" >
        <div class="row">
            <div style="width: 30%; margin: 25px auto;">
            <form action="/new/event" method="POST">
                <hr>
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="content" placeholder="Content Goes Here..."></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="coords" placeholder="Co Ordinators">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="fee" placeholder="Registration Fee">
                </div>
                <div class="form-group">
                    <input class="form-control" type="tel" name="contact" placeholder="Contact">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="edate" placeholder="Event Date(s)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="price" placeholder="Price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="fest" placeholder="Fest">
                </div>
                <div style="align-self: center;" class="form-group">
                    <input  class="btn btn-success btn-lg btn-block" type="submit">
                </div>
                <hr>
                <br>
            </form>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer") %>
